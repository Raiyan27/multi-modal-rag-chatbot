# ===================================================================
# Multi-Modal RAG Application - Environment Configuration
# ===================================================================
# Copy this file to .env and fill in your actual values
# The application will use these defaults if .env is not present

# ===================================================================
# OpenAI Configuration (Required)
# ===================================================================
OPENAI_API_KEY=sk-your-actual-api-key-here

# ===================================================================
# Model Selection
# ===================================================================
OPENAI_MODEL=gpt-4o                    # Primary chat model for text queries
OPENAI_MINI_MODEL=gpt-4o-mini          # Lightweight model for simple tasks
OPENAI_VISION_MODEL=gpt-4o             # Model for image/vision analysis
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # Embedding generation model

# ===================================================================
# Model Parameters
# ===================================================================
OPENAI_TEMPERATURE=0.7                 # Creativity/randomness (0.0-2.0, lower=more deterministic)
OPENAI_MAX_TOKENS=10000                # Maximum response length in tokens

# ===================================================================
# Document Processing
# ===================================================================
CHUNK_SIZE=1000                        # Characters per document chunk
CHUNK_OVERLAP=200                      # Character overlap between chunks
MAX_FILE_SIZE_MB=50                    # Maximum upload file size in megabytes

# ===================================================================
# Storage Paths
# ===================================================================
CHROMA_DB_PATH=./data/chroma_db        # ChromaDB vector store directory
UPLOADS_PATH=./data/uploads            # Uploaded files storage directory

# ===================================================================
# API Server Configuration
# ===================================================================
API_HOST=0.0.0.0                       # API server bind address
API_PORT=8000                          # API server port
CORS_ORIGINS=*                         # Allowed CORS origins (comma-separated or *)

# ===================================================================
# Frontend Configuration
# ===================================================================
API_BASE_URL=http://localhost:8000/api/v1  # Backend API URL for frontend
REQUEST_TIMEOUT=60                     # HTTP request timeout in seconds
HEALTH_CHECK_TIMEOUT=5                 # Health check timeout in seconds

# ===================================================================
# RAG Configuration
# ===================================================================
DEFAULT_MAX_SOURCES=5                  # Default number of source chunks to retrieve
DEFAULT_TEMPERATURE=0.7                # Default LLM temperature

# ===================================================================
# Application Settings
# ===================================================================
DEBUG_MODE=false                       # Enable debug mode for verbose logging
ENVIRONMENT=development                # Environment identifier (development or production)