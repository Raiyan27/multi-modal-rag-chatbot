# =============================================================================
# Multi-Modal RAG Application Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Required Settings
# -----------------------------------------------------------------------------

# OpenAI API Key (required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"

# -----------------------------------------------------------------------------
# Storage Settings (optional - defaults shown)
# -----------------------------------------------------------------------------

# Path to ChromaDB persistent storage
# CHROMA_DB_PATH="./data/chroma_db"

# Path for uploaded file storage
# UPLOADS_PATH="./data/uploads"

# -----------------------------------------------------------------------------
# API Configuration (optional)
# -----------------------------------------------------------------------------

# API server host and port
# API_HOST="0.0.0.0"
# API_PORT=8000

# -----------------------------------------------------------------------------
# Document Processing (optional)
# -----------------------------------------------------------------------------

# Maximum file size in MB (default: 50)
# MAX_FILE_SIZE_MB=50

# Text chunking settings
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# RAG Configuration (optional)
# -----------------------------------------------------------------------------

# Default number of source documents to retrieve
# DEFAULT_MAX_SOURCES=5

# Default temperature for LLM responses (0.0 - 2.0)
# DEFAULT_TEMPERATURE=0.1

# -----------------------------------------------------------------------------
# Model Configuration (optional)
# -----------------------------------------------------------------------------

# OpenAI embedding model
# EMBEDDING_MODEL="text-embedding-3-small"

# OpenAI chat model for text queries
# CHAT_MODEL="gpt-4o-mini"

# OpenAI model for vision queries
# VISION_MODEL="gpt-4o"

# -----------------------------------------------------------------------------
# Development/Debug (optional)
# -----------------------------------------------------------------------------

# Enable debug mode (verbose logging)
# DEBUG_MODE=false